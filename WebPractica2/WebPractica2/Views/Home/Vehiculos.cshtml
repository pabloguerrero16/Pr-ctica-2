@model WebPractica2.Entities.VehiculoEnt

@{
    ViewBag.Title = "Vehiculos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Registrar Vehiculo</h4>
            @if (TempData["Exito"] != null)
            {
                <div class="alert alert-success" role="alert" style="text-align:center">
                    @TempData["Exito"]
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger" role="alert" style="text-align:center">
                    @TempData["Error"]
                </div>
            }

            @using (Html.BeginForm("Vehiculos", "Home", FormMethod.Post, new { @class = "forms-sample" }))
            {
                <div class="form-group">
                    <label for="exampleInputPassword1">Marca</label>
                    @Html.TextBoxFor(m => m.Marca, new { @class = "form-control", @type = "text", @placeholder = "Marca" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Modelo</label>
                    @Html.TextBoxFor(m => m.Modelo, new { @class = "form-control", @type = "text", @placeholder = "Modelo" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Color</label>
                    @Html.TextBoxFor(m => m.Color, new { @class = "form-control", @type = "text", @placeholder = "Color" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Precio</label>
                    @Html.TextBoxFor(m => m.Precio, new { @class = "form-control", @type = "text", @placeholder = "Precio" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Vendedor</label>
                    @Html.DropDownListFor(m => m.Vendedor, ViewBag.Vendedores as List<SelectListItem>, new { @class = "form-control", @type = "text", @placeholder = "Vendedor" })
                </div>

                <input type="submit" class="btn btn-primary me-2" value="REGISTRAR">
                <a class="btn btn-light" href="@Url.Action("Index", "Home")">Salir</a>
            }

        </div>
    </div>
</div>

